{% set hot1 =page.find(page.find('/').header.hotline1_konten).children.order('date', 'desc')|first %}
{% if hot1==null %}
{% set hot1 =page.find(page.find('/').header.hotline1_konten) %}
{% endif %}

{% set hot2 =page.find(page.find('/').header.hotline2_konten).children.order('date', 'desc')|first %}
{% if hot2==null %}
{% set hot2 =page.find(page.find('/').header.hotline2_konten) %}
{% endif %}

{% set hot3 =page.find(page.find('/').header.hotline3_konten).children.order('date', 'desc')|first %}
{% if hot3==null %}
{% set hot3 =page.find(page.find('/').header.hotline3_konten) %}
{% endif %}

{% set pagebanner =page.find(page.find('/').header.banner_konten).children.order('date', 'desc')|first %}
